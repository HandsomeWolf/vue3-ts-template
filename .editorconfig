 # EditorConfig helps maintain consistent coding styles for multiple developers
# See https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2
max_line_length = 100

[*.{css,scss,less}]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2